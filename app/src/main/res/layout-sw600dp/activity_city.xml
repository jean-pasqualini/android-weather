<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".city.CityActivity">

    <fragment
        android:id="@+id/city_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:name="com.example.weather.city.CityFragment"
        class="com.example.weather.city.CityFragment"/>

    <fragment
        android:id="@+id/weather_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:name="com.example.weather.weather.WeatherFragment"/>

</LinearLayout>